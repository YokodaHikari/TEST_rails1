<div class=main_container>
<h3>スケジュール一覧</h3>

<% if flash[:success] %>
<p class="success"><%= flash[:success] %></p>
<% end %>

<% if flash.now[:failure] %>
<p class="failure"><%= flash[:failure] %></p>
<% end %>

<% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
 <% end %>  

<table>
  <thead>
    <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>開始日</th>
    <th>終了日</th>
    <th>終日</th>
    <th>スケジュール更新日時</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
    </tr>
  </thead>

  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.title %></td>
      <td><%= post.start_at.strftime("%Y年%m月%d日") %></td>
      <td><%= post.end_at.strftime("%Y年%m月%d日") %></td>
      <td>
         <% if post.is_all_day %>
             <strong>○</strong>
         <% end %>
      </td>
      <td>
      <%= post.updated_at.strftime("%Y年%m月%d日%H時%M分") %>
      </td>
      <td><%= link_to "詳細", post_path(post) %></td>
      <td><%= link_to "編集", edit_post_path(post) %></td>
      <td><%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
</tbody>
</table>
<p><%= link_to "スケジュール新規作成", new_post_path%></p>
</div>

<footer>
<h1 class="schedule_total">スケジュール合計：<%= Post.count('') %></h1></br>
<h1 class="cuurent_time">現在の時刻：<%= Time.current.strftime("%Y年%m月%d日") %></h1>
</footer>