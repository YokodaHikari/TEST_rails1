<div class=main_container>
<h3>予定の新規追加</h3>

<% if flash[:delete] %>
<p class="alert_delete"><%= flash[:delete] %></p>
<% end %>  

<%= render "shared/error", obj: @post %>

<%= form_with model: @post do |f| %>
  <table>
    <tr>
        <th><%= f.label :title ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
   </tr>

    <tr>
        <th><%= f.label :start_at ,"開始日" %></th>
        <td><%= f.date_field :start_at %></td>
    </tr>

    <tr>
        <th><%= f.label :end_at ,"終了日" %></th>
        <td><%= f.date_field :end_at %></td>
    </tr>

    <tr>
        <th><%= f.label :is_all_day ,"終日" %></th>
        <td><%= f.check_box :is_all_day, checked: false %>
        <br>終日の場合はチェックを入れます</br>
        </td>
    </tr>

    <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
    </tr>

  </table>
  </div>
    <ul>
      <li><%= f.submit "スケジュールを保存"%></li>
      <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
    </ul>
<% end %>

